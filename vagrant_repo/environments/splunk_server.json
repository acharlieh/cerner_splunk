{
  "name": "splunk_server",
  "description": "Environment for the Splunk 6 Cluster",
  "default_attributes": {
    "splunk": {
      "config": {
        "clusters": [
          "cerner_splunk/cluster-vagrant"
        ],
        "roles": "cerner_splunk/authnz-vagrant:roles",
        "authentication": "cerner_splunk/authnz-vagrant:authn",
        "alerts": "cerner_splunk/alerts-vagrant:alerts",
        "secrets": {
          "c1_search1": "cerner_splunk/passwords:splunk.secret",
          "c1_search2": "cerner_splunk/passwords:splunk.secret",
          "c1_search3": "cerner_splunk/passwords:splunk.secret",
          "c1_deployer": "cerner_splunk/passwords:splunk.secret"
        }
      }
    }
  }
}